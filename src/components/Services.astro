---
const services = [
  {
    title: "Full Design Package",
    description: "Everything you need to bring your project to life — ready for the contractor to execute. From early schematic design & space planning to interior detailing — every element thoughtfully designed.",
    details: [
      "Full set of architectural drawings: site plan, floor plans, elevations & sections",
      "3D visualizations & rendering",
      "Design intent documentation",
      "Material and fixture suggestions"
    ],
    icon: "blueprint",
    slug: "full-design"
  },
  {
    title: "Design Consultation",
    description: "Not ready for the full package? We offer expert guidance for early-stage planning, layout reviews, or aesthetic direction — available remotely across the U.S.",
    details: [],
    icon: "concept",
    slug: "consultation"
  }
];
---

<section id="services" class="section bg-light">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-serif text-primary mb-4 relative inline-block">
        <div class="relative z-10">Our Services</div>
        <div class="absolute left-1/2 -translate-x-1/2 bottom-0 w-24 h-1 bg-bronze/50"></div>
      </h2>
      <p class="text-lg text-secondary max-w-3xl mx-auto">
        We offer tailored design-only services for residential and commercial projects — including new builds and remodels.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
      {services.map(service => (
        <div class="card group hover:shadow-xl transition-all duration-300 flex flex-col justify-between border border-secondary/20 rounded-sm  bg-gradient-to-b from-gray-50 to-white p-8">
          <div>
            <div class="h-16 w-16 rounded-sm bg-primary/10 flex items-center justify-center mb-6 group-hover:bg-bronze/20 transition-colors duration-300">
              <span class="text-bronze">
                {service.icon === "blueprint" && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                  </svg>
                )}
                {service.icon === "concept" && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                )}
              </span>
            </div>
            <h3 class="text-2xl font-serif text-primary mb-4">✦ {service.title}</h3>
            <p class="text-secondary mb-6">{service.description}</p>
            
            {service.details.length > 0 && (
              <div class="mb-6">
                <h4 class="text-primary font-medium mb-3">What's included:</h4>
                <ul class="space-y-2">
                  {service.details.map(detail => (
                    <li class="flex items-start">
                      <span class="text-accent mr-2">*</span>
                      <span class="text-secondary">{detail}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-16">
      <a href="/consultation" class="btn bg-primary text-light hover:bg-opacity-90 transition-all px-8 py-3 rounded-sm">
        Schedule a Consultation
      </a>
    </div>
  </div>
</section> 